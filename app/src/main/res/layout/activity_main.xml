<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.roboart.librarytest.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorAccent"
                android:text="Click Scan"
                android:paddingLeft="10sp"
                android:textSize="16sp"
                />
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Rssi"
                android:textColor="@color/colorAccent"
                android:paddingRight="10sp"
                android:textSize="16sp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:weightSum="2">
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Device Model/Firmware"/>

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/showrssi"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:paddingRight="10sp"
            android:textSize="16sp"
            />

    </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Enter Device Name"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            >

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:text="@string/DeviceNameM"
            android:id="@+id/devicename"
            android:inputType="text"
            >

        </EditText>
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan"/>

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"/>

        <Button
            android:id="@+id/btnPair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pair"/>

        <Button
            android:id="@+id/btnAuthenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authenticate"/>
        <Button
            android:id="@+id/btndisConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DisConnect"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>


        <Button
            android:id="@+id/btnLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lock"/>

        <Button
            android:id="@+id/btnUnlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unlock"/>

        <Button
            android:id="@+id/btnTrunk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trunk"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>
        <Button
            android:id="@+id/btnCarTypeSelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Type Self"
            />
        <Button
            android:id="@+id/btnAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acc"/>

        <Button
            android:id="@+id/btnPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power"
            />
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>


        <Button
            android:id="@+id/btnAutoLockOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AutoLock On"
            />

        <Button
            android:id="@+id/btnAutoLockOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AutoLock Off"
            />

        <Button
            android:id="@+id/btnEKOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Kill On"
            />

        <Button
            android:id="@+id/btnEKOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Kill Off"
            />

        <Button
            android:id="@+id/btnSecurityOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security On"
            />

        <Button
            android:id="@+id/btnSecurityOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Off"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>

        <Button
            android:id="@+id/btnCarTypePush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Type Push"
            />



        <Button
            android:id="@+id/btnPushPowerOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SmartKey Active"
         />

        <Button
            android:id="@+id/btnPushPowerOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SmartKey Deactive"
          />
        <Button
            android:id="@+id/btnPushCarStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start/Stop"
          />

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="1dp"
            android:background="#0C0B0B"></TableRow>

